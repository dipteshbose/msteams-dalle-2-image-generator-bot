{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4",
  "body": [
    {
      "type": "ImageSet",
      "spacing": "medium",
      "imageSize": "large",
      "images": [
        {
          "$data": "${data}",
          "id": "thumb-${$index}",
          "type": "Image",
          "size": "stretch",
          "url": "${url}",
          "altText": "${$root.prompt}",
          "selectAction": {
            "type": "Action.Submit",
            "title": "Open",
            "data": {
              "msteams": {
                "type": "task/fetch"
              },
              "data": {
                "url": "${url}",
                "prompt": "${$root.prompt}"
              }
            }
          }
        }
      ]
    }
  ]
}
